<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindind.DataObject2.MainPage">


    <Grid
        Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="0"
            Margin="24">
            <Label
            Text="Conteo:"
            FontSize="Medium"/>
            <Border
               Stroke="Gray"
               Margin="0,24,0,36">
                <Label
             Text="{Binding Path=Conteo}"
             HorizontalOptions="Center"
             Margin="0,24"
             FontSize="Large"
             FontAttributes="Bold"/>
            </Border>

        </VerticalStackLayout>
        <HorizontalStackLayout
             Grid.Row="1"
             Grid.Column="0"
             HorizontalOptions="Center"
             Spacing="32">
            <Button
              Text="Contar"
              FontSize="Medium"
              WidthRequest="130"
              Clicked="OnContarButton_Clicked"/>
            <Button
              Text="Reiniciar"
              FontSize="Medium"
              WidthRequest="130"
              Clicked="OnReiniciarButton_Clicked"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
